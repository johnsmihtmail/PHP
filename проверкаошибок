<?php

error_reporting(-1);

$text="Дан текст,который по идее.должын координально содержать здесь а ";
$regexp='/.{1,10},\\S{1,10}|.{1,10}\\.\\S{1,10}|.{1,10}:\\S{1,10}|.{1,10};\\S{1,10}|.{1,10}жы.{1,10}|.{1,10}шы.{1,10}|.{1,10}координально.{1,10}|.{1,10}сдесь.{1,10}|.{1,10}[^,] а.{1,10}/u';
$matches=array();
$count=preg_match_all($regexp, $text, $matches);
$count=count($matches[0]);

for ($i=0; $i<=$count-1; $i++) {
	echo "Ошибка! Исправь.\n{$matches[0][$i]}\n\n";
	}
